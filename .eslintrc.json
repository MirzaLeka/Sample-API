{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    // "extends": "plugin:react/recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        // "ecmaFeatures": {
        //     "jsx": true
        // },
        "ecmaVersion": 2018
    },
    // "plugins": [
    //     "react"
    // ],
    "rules": {
        "no-console": "off",
        "no-alert": "off",
        "comma-dangle": "off",
        "eslint linebreak-style": ["off", "windows"],
        "linebreak-style": "off",
        "padded-blocks": "off",
        "max-len": "off",
        "no-lonely-if": "off",
        "no-confusing-arrow": "off",
        "no-array-constructor": "off",
        "no-use-before-define": "off",
        "no-param-reassign": "off",
        "no-plusplus": "off",
        "no-unused-vars": [
            "error",
            {
                "vars": "local",
                "args": "none"
            }
        ],
        "quotes": [
            2,
            "single",
            {
              "avoidEscape": true,
              "allowTemplateLiterals": true
            }
        ],
    }
}